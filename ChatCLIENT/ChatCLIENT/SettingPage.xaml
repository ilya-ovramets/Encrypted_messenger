<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatCLIENT.SettingPage"
             Title="SettingPage">
    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" Padding="20">
        <Frame Grid.Column="0" BackgroundColor="Purple" Padding="10">
            <VerticalStackLayout Spacing="10">
                <Label Text="Connection Settings" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
                <Entry x:Name="HostEntry"  Placeholder="Host" PlaceholderColor="LightGray" BackgroundColor="#9B9CD5" FontSize="18"/>
                <Entry x:Name="PortEntry" Placeholder="Port" PlaceholderColor="LightGray" BackgroundColor="#9B9CD5" FontSize="18"/>
                <Button Text="Change" Margin="0,0,0,8" Clicked="ChengHostPort"  ContentLayout="Left,10" FontFamily="Playfair Display" FontSize="Title" FontAttributes="Bold" />
            </VerticalStackLayout>
        </Frame>
        <Frame Grid.Column="1" BackgroundColor="Purple" Padding="10">
            <Label Text="Encryption Settings" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
        </Frame>
    </Grid>

</ContentPage>